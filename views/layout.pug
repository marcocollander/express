doctype html
mixin item(title, url)
  li(class='menu_item') 
    a(href=url class=`menu__link ${path == url ? 'menu__link--active' : ''}`)=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class='menu')
      ul(class='menu__list')
        +item('Strona główna', '/')
        +item('Aktualności', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')
    block content
